                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button  Content="日和佐" ToolTip="阿南・日和佐・宍喰" Background="Transparent" BorderBrush="Transparent" Foreground="Black" FontSize="12" FontWeight="Bold" Margin="801,395,157,183" Click="btArea_Click">
